{
  "window": {
    "height": 600,
    "width": 800,
    "borderless": false,
    "show_custom_titlebar": false,
    "title": "Media Manager",
    "show_menubar": true,
    "fullscreen": false,
    "always_on_top": false,
    "exit_on_escape": false,
    "fullscreen_on_f11": true,
    "bg": "black"
  },
  "window_manager": {
    "custom_title_bar": {
      "bg": "#333333",
      "relief": "raised",
      "bd": 0,
      "title_label": {
        "bg": "#333333",
        "fg": "white",
        "anchor": "w",
        "padx": 10
      },
      "close_button": {
        "text": "âœ•",
        "bg": "#333333",
        "fg": "white",
        "bd": 0,
        "padx": 10,
        "pady": 2
      }
    },
    "resize_grips": {
      "bg": "#333333",
      "width": 7,
      "height": 7,
      "bottom_right_cursor": "bottom_right_corner",
      "bottom_left_cursor": "bottom_left_corner"
    },
    "menu_items": {
      "file_menu": {
        "label": "File",
        "exit_label": "Exit"
      }
    }
  },
  "grid": {
    "grid_rows": 2,
    "grid_columns": 2,
    "row_weights": [1, 0],
    "column_weights": [0, 1],
    "row_minsize": [24, 0],
    "col_minsize": [100, 200],
    "uniform_row": "",
    "uniform_col": "",
    "fix_dimensions_by_weight": true,
    "cell_configs": [
      {
        "type": "media_tree",
        "name": "media_tree_1",
        "row": 0,
        "column": 0,
        "rowspan": 1,
        "columnspan": 1,
        "linked_content_frame_name": "content_frame_1",
        "bd": 0,
        "highlightthickness": 0,
        "bg": "black",
        "sticky": "nsew",
        "padx": 0,
        "pady": 0,
        "grid_propagate": false,
        "treeview": {
          "columns": ["type", "size", "path"],
          "column_configs": {
            "#0": {"width": 300, "stretch": true, "heading": "Name"},
            "type": {"width": 100, "anchor": "w", "heading": "Type"},
            "size": {"width": 80, "anchor": "e", "heading": "Size (KB)"},
            "path": {"width": 200, "stretch": true, "heading": "Path"}
          }
        }
      },
      {
        "type": "content_frame",
        "name": "content_frame_1",
        "row": 0,
        "column": 1,
        "rowspan": 1,
        "columnspan": 1,
        "linked_content_frame_name": "",
        "bd": 0,
        "highlightthickness": 0,
        "bg": "azure3",
        "sticky": "nsew",
        "padx": 0,
        "pady": 0,
        "grid_propagate": false,
        "image_manager": {
          "placeholder_text": "Select an image file to preview",
          "placeholder_bg": "black",
          "placeholder_fg": "white",
          "placeholder_borderwidth": 0,
          "placeholder_relief": "flat",
          "placeholder_anchor": "center",
          "placeholder_place_relx": 0,
          "placeholder_place_rely": 0,
          "placeholder_place_anchor": "center",
          "placeholder_pack_fill": "both",
          "placeholder_pack_expand": true,
          "placeholder_pack_padx": 0,
          "placeholder_pack_pady": 0,
          "min_display_width": 100,
          "min_display_height": 100,
          "display_width_offset": 5,
          "display_height_offset": 5
        }
      },
      {
        "type": "statusbar",
        "name": "statusbar_1",
        "row": 1,
        "column": 0,
        "rowspan": 1,
        "columnspan": 2,
        "linked_content_frame_name": "",
        "bd": 0,
        "highlightthickness": 0,
        "bg": "azure3",
        "sticky": "nsew",
        "padx": 0,
        "pady": 0,
        "grid_propagate": false,
        "status_text": "Ready",
        "status_anchor": "w",
        "status_relief": "sunken",
        "status_fill": "x",
        "status_padx": 5,
        "status_pady": 2
      }
    ]
  },
  "slideshow": {
    "delay": 8000,
    "grip_size": 7
  }
}
